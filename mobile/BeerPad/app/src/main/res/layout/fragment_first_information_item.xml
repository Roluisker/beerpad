<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepageDiscountRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scaleType="centerCrop">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_beer" />

    <RelativeLayout
        android:id="@+id/mainInformationContainer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="105dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/informationMainTitleMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:text="@string/homepage_main_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/homepage_main_title"
            android:textSize="42sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mainTitleTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/informationMainTitleMiddle"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/homepage_sub_title"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/homepage_sub_title"
            android:textStyle="italic" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/secondaryInformationContainer"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mainInformationContainer"
        android:layout_alignStart="@+id/mainInformationContainer"
        android:layout_below="@+id/mainInformationContainer"
        android:layout_marginRight="15dp"
        android:layout_marginTop="85dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/firstInformationMainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/firstpage_main_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/neutral_white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/firstInformationSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@string/firstpage_sub_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/neutral_white"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/firstInformationBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/firstpage_book_now"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/information_book_text"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>