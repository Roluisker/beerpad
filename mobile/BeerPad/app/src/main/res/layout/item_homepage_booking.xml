<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_items_homepage"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/item_homepage_first_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_pageview_black_24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:tint="#FFFF00" />

        <TextView
                android:id="@+id/item_homepage_first_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toEndOf="@+id/item_homepage_first_icon"
                android:layout_toRightOf="@+id/item_homepage_first_icon"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />

        <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_booking"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/transparent_gray_2" />

    </RelativeLayout>

</merge>