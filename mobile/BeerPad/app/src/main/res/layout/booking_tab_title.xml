<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/booking_tab_container"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/booking_tab"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_pageview_black_24dp" />

    <TextView
        android:id="@+id/booking_tab_main_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/booking_tab"
        android:layout_toRightOf="@+id/booking_tab"
        android:gravity="center"
        android:paddingRight="12dp"
        android:text="Manage Trips"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/neutral_white"
        android:textStyle="bold" />

</RelativeLayout>