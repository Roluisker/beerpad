<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.skyfishjy.library.RippleBackground
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ripple_background_content"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:rb_color="#0099CC"
            app:rb_duration="3000"
            app:rb_radius="32dp"
            app:rb_rippleAmount="6"
            app:rb_scale="6">

            <ImageView
                android:id="@+id/centerImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:onClick="btnDiscover"
                android:src="@drawable/ic_pageview_black_24dp" />

            <ImageView
                android:id="@+id/foundDevice"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_above="@id/centerImage"
                android:layout_marginBottom="32dp"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/centerImage"
                android:onClick="onClickDevice"
                android:src="@drawable/ic_pageview_black_24dp"
                android:visibility="invisible" />
        </com.skyfishjy.library.RippleBackground>

        <Button
            android:text="boton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="enviar" />

    </LinearLayout>


</LinearLayout>