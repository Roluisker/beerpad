<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepageDiscountRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scaleType="centerCrop">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/tird_beer" />

    <LinearLayout
        android:id="@+id/mainInformationContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="-18dp"
            android:paddingLeft="30dp"
            android:text="@string/thirdpage_main_title_top"
            android:textColor="@color/neutral_white"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:lineSpacingMultiplier=".80"
            android:text="@string/thirdpage_main_title_middle"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/neutral_white"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thirdInformationBottomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-8dp"
            android:text="@string/thirdpage_main_title_bottom"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/neutral_white"
            android:textSize="20sp"
            android:textStyle="italic" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/secondaryInformationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainInformationContainer"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/thirdInformationDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/thirdpage_details"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/information_book_text"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>